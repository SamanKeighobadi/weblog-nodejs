<div class="container mt-5  ">
  <div class="w-100 shadow-lg  rounded row bg-light w-75 login-container">
    <div class="col-lg-6 ">
      <form action="" class="ml-5">
        <h1 class="h2 mb-3 font-weight-bold pt-3">لطفا وارد شوید:</h1>
        <label for="fullname" class="py-3 font-weight-bold">نام و نام خانوادگی:</label>
        <input
          type="text"
          class="form-control w-75"
          name="fullname"
          placeholder="نام و نام خانوادگی"
          required
          autofocus
        />

        <label for="password" class="py-3 font-weight-bold">گذرواژه:</label>
        <input
          type="password"
          class="form-control w-75"
          name="password"
          placeholder="گذرواژه"
          id="password"
          required
        />

        <label for="rememberme" class="py-3 font-weight-bold">مرا به خاطر بسپار</label>
        <input
          type="checkbox"
          class=""
          name="rememberme"
          id="rememberme"
          required
        />
        <button type="submit" class="btn btn-info btn-block btn-block w-75 font-weight-normal">
          ورود
        </button>
      </form>
    </div>
    <div class="col-lg-6 login-img rounded-left">
  
    </div>
  </div>
</div>
