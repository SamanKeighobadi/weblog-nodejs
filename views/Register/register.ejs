<div class="container">
  <div class="row">
    <form action="/users/register" method="POST" class="shadow-sm col-12 p-4">
      <h1 class="h3 font-bold">ثبت نام</h1>
      <label for="email" class="my-3">ایمیل :</label>
      <input
        type="email"
        name="email"
        id="email"
        placeholder="ایمیل"
        required
        autofocus
        class="form-control w-25"
      />

      <label for="fullname" class="my-3">نام و نام خانوادگی : </label>
      <input
        type="text"
        id="fullname"
        class="form-control w-25"
        placeholder="نام و نام خانوادگی"
        name="fullname"
        required
      />

      <label for="password" class="my-3">گذرواژه : </label>
      <input
        type="password"
        id="password"
        class="form-control w-25"
        placeholder="گذرواژه"
        name="password"
        required
      />

      <label for="confirm_password" class="my-3">تکرار گذرواژه: </label>
      <input
        type="password"
        id="confirm_password"
        class="form-control w-25"
        name="confirm_password"
        placeholder="تکرار گذرواژه"
        required
      />

      <label for="checkbox" class="my-3">با قوانین موافقم</label>
      <input type="checkbox" name="checkbox" required />

      <a href="/users/login">حساب کاربری دارید؟</a>

      <button class="btn btn-info btn-block w-25">ثبت نام</button>
    </form>
  </div>
</div>
