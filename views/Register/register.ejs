<div class="container register-container">
  <div class="row register rounded">
    <form action="/users/register" method="POST" class="shadow-lg col-12 rounded p-4 register-form ">
      <%- include('../includes/errors/messages.ejs') %>
      <h1 class="h2 font-bold">ثبت نام</h1>
      <label for="email" class="my-3">ایمیل :</label>
      <input
        type="email"
        name="email"
        id="email"
        placeholder="ایمیل"
        autofocus
        required
        class="form-control w-100 rounded-pill"
      />

      <label for="fullname" class="my-3">نام و نام خانوادگی : </label>
      <input
        type="text"
        id="fullname"
        class="form-control w-100 rounded-pill"
        placeholder="نام و نام خانوادگی"
        name="fullname"
        required
      />

      <label for="password" class="my-3">گذرواژه : </label>
      <input
        type="password"
        id="password"
        class="form-control w-100 rounded-pill"
        placeholder="گذرواژه"
        name="password"
        required
      />

      <label for="confirm_password" class="my-3">تکرار گذرواژه: </label>
      <input
        type="password"
        id="confirm_password"
        class="form-control w-100 rounded-pill"
        name="confirm_password"
        placeholder="تکرار گذرواژه"
        required
      />

      <label for="checkbox" class="my-3">با قوانین موافقم</label>
      <input type="checkbox" name="checkbox" required />

      <a href="/users/login" class=" px-2">حساب کاربری دارید؟</a>

      <button class="btn btn-info btn-block w-50 mx-auto rounded-pill">ثبت نام</button>
    </form>
  </div>
</div>
